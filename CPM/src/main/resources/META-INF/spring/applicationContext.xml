<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

        <bean id="connController" class="com.myapp.erp.conn.ConnCtrlImpl">
        </bean>
        
        <bean id="person" class="com.myapp.erp.user.Person">
        </bean>
        <bean id="user" class="com.myapp.erp.user.User" parent="person">
        </bean>
        
        <bean id="manageController" class="com.myapp.erp.manage.ManageCtrlImpl">
        </bean>
        
        <bean id="LimManCtrl" class="com.myapp.erp.manage.limited.LimitedCtrl">
            <property name="srv" ref="LimManSrv"></property>
        </bean>
        <bean id="LimManSrv" class="com.myapp.erp.manage.limited.LimitedSrv">
            <property name="dao" ref="LimManDao"></property>
        </bean>
        <bean id="LimManDao" class="com.myapp.erp.manage.limited.LimitedDao">
        </bean>
        
</beans>